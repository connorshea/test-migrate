{
  "$schema": "./node_modules/oxlint/configuration_schema.json",
  "plugins": [
    "react",
    "typescript"
  ],
  "categories": {
    "correctness": "off"
  },
  "env": {
    "builtin": true
  },
  "rules": {
    "react/no-multi-comp": "error",
    "@typescript-eslint/no-inferrable-types": "error"
  },
  "overrides": [
    {
      "files": [
        "subdir/**/*.ts",
        "subdir/**/*.tsx"
      ],
      "rules": {
        "node/global-require": "error"
      },
      "plugins": [
        "node"
      ]
    }
  ]
}